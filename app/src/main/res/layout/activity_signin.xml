<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="false"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context="com.ramencon.ui.SigninActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:src="@drawable/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/signTextNewHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:text="New here? Please sign-in with one of the following:"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/signLoginFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_facebook"
            android:drawableLeft="@drawable/icon_facebook_32"
            android:gravity="center_vertical|start"
            android:padding="5dp"
            android:text="  Facebook"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/signLoginTwitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_twitter"
            android:drawableLeft="@drawable/icon_twitter_32"
            android:gravity="center_vertical|start"
            android:padding="5dp"
            android:text="  Twitter"
            android:textColor="@android:color/white"
            android:visibility="gone"/>

        <Button
            android:id="@+id/signLoginGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_google"
            android:drawableLeft="@drawable/icon_google_32"
            android:gravity="center_vertical|start"
            android:padding="5dp"
            android:text="  Google"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/signTextOrBrowse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text="or browse anonymously; we won't judge."
            android:textSize="15dp"/>

        <Button
            android:id="@+id/signLoginAnonymous"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray"
            android:drawableLeft="@drawable/icon_skip"
            android:drawableTint="@android:color/white"
            android:gravity="center_vertical|start"
            android:padding="5dp"
            android:text="  Skip, Sign-in Anonymously"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/signLogout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray"
            android:drawableLeft="@drawable/ic_menu_signout"
            android:drawableTint="@android:color/white"
            android:gravity="center_vertical|start"
            android:padding="5dp"
            android:text="  Sign-out"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/signSkip"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray"
            android:drawableLeft="@drawable/icon_left"
            android:drawableTint="@android:color/white"
            android:gravity="center_vertical|start"
            android:padding="5dp"
            android:text="  Back"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/signDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text="Why sign-in? When you sign-in to the Ramencon Booklet app, you can not only share your favorite Ramencon moments and panels, you can also check-in so your approved friends always know where you are."
            android:textSize="15dp"/>

    </LinearLayout>

</LinearLayout>